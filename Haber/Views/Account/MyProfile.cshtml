@model Haber.Models.Register
@{
    ViewBag.Title = "MyProfile";
}

<h2>This is your profile</h2>
@Html.ActionLink("Bilgilerimi düzenle", "EditSec", new { id = Model.UserID }, new { @class = "btn btn-primary" })

<p><strong>Kullanıcı Adın: </strong>@Model.Username</p>
<p><strong>Emailin:</strong> @Model.Email</p>

Paylaştığı haberler:

@if (ViewBag.haberler.Count == 0)
{
    <p>Henüz bir haber paylaşmadın.</p>
}
else
{
    foreach (var haber in ViewBag.haberler)
    {
        <div class="card">
            <div class="card-body">
                <div class="card-text">
                    @haber.HaberTitle
                </div>
            </div>
        </div>
    }
}



