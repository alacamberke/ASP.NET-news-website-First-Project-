@model Haber.Models.HaberModel
@{
    ViewBag.Title = "Create";
    var kategoriler = ViewBag.kategori;
}

<h2>Yeni Haber Oluştur</h2>

@Html.ValidationSummary()

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            <div class="card bg-light">
                <div class="m-3">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Haber Başlığı</label>
                        @Html.TextBoxFor(i => i.HaberTitle, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Haber İçeriğini Giriniz </label>
                        @Html.TextAreaFor(i => i.HaberContent, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Haberin Kaynağını Yazınız </label>
                        @Html.TextBoxFor(i => i.HaberSource, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Haberin Kategorisi </label>
                        @Html.DropDownListFor(i => i.KategoriId, (IEnumerable<SelectListItem>)kategoriler, "Lütfen kategori seçiniz",
                       new { @class = "form-control" })
                    </div>
                    <button class="btn btn-success" type="submit">Kaydet</button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <div class="card bg-primary">
            <h3>Ürünlerinizi Oluşturun</h3>
        </div>
    </div>
</div>

