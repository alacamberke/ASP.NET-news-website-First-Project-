@using Haber.Models
@model List<HaberModel>
@{
    ViewBag.Title = "Index";
}

<h2>Haberler</h2>

<div class="row">
    <div class="col-md-8">
        @foreach (var haber in Model)
        {
            <div class="card bg-light">
                <div class="m-3">
                    @haber.HaberTitle<br />
                </div>
                @Html.ActionLink("Haber Detayı", "Details", "Home", new { id = haber.HaberID }, new { @class = "btn-dark" })
            </div>
        }
    </div>
</div>

@section kategoriler{
    @{Html.RenderAction("Kategoriler", "Kategori"); }
}
<br />
<a href="/Home/Create" class="btn btn-primary">Haber Oluştur</a>


