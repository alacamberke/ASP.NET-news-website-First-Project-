@using Haber.Models
@model List<Register>
@{
    ViewBag.Title = "Index";
    var users = Model;
}

<h2>Kullanıcılar</h2>

<table class="table">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Emaili</th>
        <th>Rolü</th>
        <th>Ayarlar</th>
    </tr>
    @foreach (var item in users)
    {
        <tr>
            <td>@item.Username</td>
            <td>@item.Email</td>
            <td>@item.Role</td>
            <td>
                <button class="btn btn-danger">Banla</button>
                <button class="btn btn-danger">Kullanıcıyı Sil</button>
            </td>
        </tr>
    }
</table>

